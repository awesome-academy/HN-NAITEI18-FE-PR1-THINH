extends ../layouts/default-layout.pug
block content
  main.main.container-fluid
    ul.main__promotion-list.row
      +promotionTag("fa-solid fa-plane", "Miễn phí vận chuyển trên toàn quố")(class="promotion__item col-md-4 flex-md-column text-center")
      +promotionTag("fa-solid fa-gift", "Nhận ngay quà tặng trị giá 350.000đ")(class="promotion__item col-md-4 flex-md-column text-center")
      +promotionTag("fa-solid fa-star", "Giảm 30% cho đơn hàng trên 5.000.000đ")(class="promotion__item col-md-4 flex-md-column text-center")
    section.main__static-blog.container-fluid
      .static-blog__item-group.row
        img.static-blog__item.col-12.col-md-6(src="../assets/images/nuochoa_suatam.png" alt="nuoc hoa sua tam")
        img.static-blog__item.col-12.col-md-6(src="../assets/images/corinne2015.png" alt="nuoc hoa sua tam")
      .static-blog__item-group.row 
        img.static-blog__item.col-12.col-md-6(src="../assets/images/combo_tam_trang.png" alt="nuoc hoa sua tam")
        img.static-blog__item.col-12.col-md-6(src="../assets/images/trangsuc_daisy.png" alt="nuoc hoa sua tam")
    section.main__feedback.row
      .feedback__content.col-12.text-center.col-md-10
        p " Vẫn là vẻ bề ngoài vô cùng đơn giản với các tông màu trắng, hồng làm chủ đạo nhưng lại tạo ra sức hút kỳ lạ với những ai cầm trên tay sản phẩm ấy! Với công nghệ cải tiến mới nhất, hãng Rohto. "
        .author__info-box.d-none.d-md-flex
          h5.author__name TUTILE
          p.author__position Giám đốc phát triển sản phẩm 
        i.fa-solid.fa-ellipsis
      .feedback__author.col-12.col-md-2
        img.author__avatar(src="../assets/images/avatar.png", alt="author avatar")
        .author__info-box.d-md-none
          h3.author__name TUTILE
          p.author__position Giám đốc phát triển sản phẩm
    section.main__category.container-fluid
      .category__tag-wrapper.row
        p.category__tag.col-12.col-md-4.text-md-center Sản phẩm mới
        h2.category__tag.col-12.col-md-4.text-md-center Sản phẩm bán chạy
        p.category__tag.col-12.col-md-4.text-md-center Sản phẩm đặc biệt
      .category__line-wrapper.row
        .line__box.col-12
          img(src="../assets/images/line.png", alt="line")
      ul.category__items.row
        each item in categories
          li.category__item.col-5.col-md-2
            i.fa-solid.fa-circle.d-md-none
            p= item
      .category__product.row
        +productCard("../assets/images/product_mobile.png", "product", "HOME", "Mỹ phẩm châu Âu", "350.000đ", "450.000đ", !withButton )(class="product white-blur col-12 col-xl-2 d-none d-xl-flex")
        +productCard("../assets/images/product_mobile.png", "product", "HOME", "Mỹ phẩm châu Âu", "350.000đ", "450.000đ", withButton)(class="product col-12 col-md-6 col-xl-2")
        +productCard("../assets/images/product_mobile.png", "product", "HOME", "Mỹ phẩm châu Âu", "350.000đ", "450.000đ", !withButton)(class="product col-12 col-md-6 col-xl-2 d-none d-md-flex")
        +productCard("../assets/images/product_mobile.png", "product", "HOME", "Mỹ phẩm châu Âu", "350.000đ", "450.000đ", withButton)(class="product col-12 col-xl-2 d-none d-xl-flex")
        +productCard("../assets/images/product_mobile.png", "product", "HOME", "Mỹ phẩm châu Âu", "350.000đ", "450.000đ", !withButton)(class="product col-12 col-xl-2 d-none d-xl-flex")
        +productCard("../assets/images/product_mobile.png", "product", "HOME", "Mỹ phẩm châu Âu", "350.000đ", "450.000đ", !withButton)(class="product white-blur col-12 col-xl-2 d-none d-xl-flex")
    section.main__more-info.container-fluid
      .more-info__wrapper.row
        .more-info__contacts.col-12
          +contact("fa-brands fa-facebook", "FACEBOOK")(class="contact")
          +contact("fa-brands fa-twitter", "TWITTER")(class="contact inactive")
          +contact("fa-brands fa-instagram", "INSTAGRAM")(class="contact inactive d-none d-md-flex")
          +contact("fa-brands fa-google-plus-g", "GOOGLE+")(class="contact inactive d-none d-md-flex")
          +contact("fa-brands fa-pinterest", "PINTEREST")(class="contact inactive d-none d-lg-flex")
          +contact("fa-brands fa-linkedin", "LINKEDIN")(class="contact inactive d-none d-lg-flex")
      .more-info__wrapper.row
        .more-info__aboutus.col-12.col-md-6.col-xl-4
          h2.aboutus__title VỀ CHÚNG TÔI
          img(src="../assets/images/line.png", alt="line")
          .logo-box
            +logo()
