mixin linkItemNav(href, title, isDropDown)
  if isDropDown
    li.nav__link
      .dropdowm
        a.dropdown-toggle(class!=attributes.class, href=href, data-bs-toggle="dropdown")=title
        div.dropdown-menu.nav-dropdown__menu
          .nav-dropdown__wrapper
            +linkGroup('Dưỡng da', navLinks1, false)
            +linkGroup('Nước hoa', navLinks2, false)
            +linkGroup('Trang sức', navLinks2, false)
  else
    li.nav__link
      a(class!=attributes.class, href=href)=title
      i.fa-solid.fa-chevron-down

mixin linkGroup(title, linkTitles, darkText)
  .link-group-cus
    h5.link-group__title= title
    ul(class=darkText?'link-group__links text-white': 'link-group__links text-black')
      each item in linkTitles
        li.link-item__wrapper
          a(class=darkText?'link-item text-white': 'link-item text-black', href="#")= item

mixin promotionTag(iconClass, title)
  li(class!=attributes.class)
    i(class=iconClass)
    p= title 

mixin logo()
  .logo__first-charbox  
    p.logo__first-char m
  h3.logo__char andala
  

mixin productCard(imageUrl, alt, productTag, productName, productPrice, productOldPrice, withButton)
  div(class!=attributes.class)
    img.product__image(src=imageUrl, alt=alt)
    h5.product__tag= productTag 
    h3.product__name= productName
    img.product__line
    p.product__price= productPrice
      span.product_sub-price= productOldPrice
    if withButton 
      .product__btn-box 
        button.btn.btn-outline-dark.btn__add MUA HÀNG
        button.btn.btn__like
          i.fa-solid.fa-heart
        button.btn.btn-outline-dark.btn__load
          i.fa-solid.fa-rotate

mixin contact(iconClass, title)
  div(class!=attributes.class)
    i(class=iconClass)
    p= title 

mixin cartDropdownItem(imageUrl, title, price)
  .cart-dropdown
    img(src=imageUrl, alt=title)
    .item__info
      p.item__title= title
      p.item__price= price
